<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        >
        <TextView
            android:id="@+id/range_no_split"
            android:layout_weight=".5"
            android:padding="10dp"
            android:text="Range 1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:fontFamily="@font/arbutusslabregular"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/drag_handle_split_pdf"
            android:layout_gravity="center"
            android:layout_weight="2.5"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete_black_24dp3"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:weightSum="4"
        >

        <TextView
            android:text="@string/from"
            android:layout_weight="1"
            android:fontFamily="@font/arbutusslabregular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/from_split"
            android:inputType="number"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="@string/to"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:fontFamily="@font/arbutusslabregular"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/to_split"
            android:inputType="number"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>