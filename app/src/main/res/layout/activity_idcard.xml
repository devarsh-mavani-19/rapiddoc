<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/rr_idcard"
    android:background="#e5e5e5"
    android:splitMotionEvents="true"
    android:layout_height="match_parent"
    tools:context=".IDCardActivity">

    <androidx.cardview.widget.CardView
        android:layout_margin="30dp"
        android:elevation="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/idcard_image1"
            android:src="@drawable/no_image_selected"
            android:layout_width="0dp"
            android:focusable="true"
            android:clickable="true"
            android:scaleType="fitCenter"
            android:layout_margin="20dp"
            android:layout_height="0dp" />

        <ImageView
            android:id="@+id/idcard_image2"
            android:layout_margin="20dp"
            android:focusable="true"
            android:clickable="true"
            android:scaleType="fitCenter"
            android:src="@drawable/no_image_selected"
            android:layout_below="@id/idcard_image1"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/colorPrimary"
        android:src="@drawable/ic_done_black_24dp"
        android:id="@+id/fab_done_idcard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>