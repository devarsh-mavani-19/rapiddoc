<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="10dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:padding="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/image_recycler_customview1"
            android:layout_width="wrap_content"
            android:scaleType="fitCenter"
            android:forceHasOverlappingRendering="true"
            android:layout_height="80dp"/>

        <CheckBox
            android:id="@+id/check_multi_select1"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:visibility="invisible"
            android:checked="false"
            android:layout_height="wrap_content">

        </CheckBox>

        <TextView
            android:id="@+id/txt_recycler_customview1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_recycler_customview"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:text="FolderName"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:padding="2dp"
            android:textSize="10dp"
            android:textColor="@color/colorBlack"></TextView>

        <TextView
            android:id="@+id/txt_recycler_customview_date1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_recycler_customview"
            android:layout_gravity="center"
            android:text="date    time"
            android:fontFamily="sans-serif"
            android:textSize="8dp"
            android:gravity="start"
            android:padding="2dp"
            android:layout_weight="1"

            android:textColor="@color/colorBlack"></TextView>

        <TextView
            android:id="@+id/txt_recycler_customview_no_of_pages1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_recycler_customview"
            android:layout_gravity="center"
            android:text="10 Pages"
            android:textSize="8dp"

            android:fontFamily="sans-serif"
            android:gravity="start"
            android:layout_weight="1"
            android:padding="2dp"
            android:textColor="@color/colorBlack"></TextView>
    </LinearLayout>
</androidx.cardview.widget.CardView>