<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OpenImageActivity">

    <ImageView
        android:id="@+id/image_open_image"
        android:layout_width="500dp"
        android:scaleType="fitXY"
        android:layout_margin="20dp"
        android:layout_height="500dp"/>

    <LinearLayout
        android:id="@+id/image_tools_open_image"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:weightSum="4"
        >

        <Button
            android:id="@+id/btn_save_openimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#fff"
            android:textSize="12sp"
            android:layout_marginEnd="20dp"
android:layout_marginStart="20dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/arbutusslabregular"

            android:background="@color/colorPrimary"
            android:text="save" />


        <Button
            android:id="@+id/button_rotate_right_90"
            android:layout_alignParentEnd="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"

            android:layout_centerVertical="true"
            android:background="@drawable/ic_rotate_right_black_24dp" />

        <Button
            android:id="@+id/button_rotate_left_90"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_rotate_left_black_24dp"
            android:gravity="center" />

        <Button
            android:id="@+id/btn_discard_openimage"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="#fff"
            android:fontFamily="@font/arbutusslabregular"
            android:padding="5dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"

            android:background="@color/colorPrimary"
            android:layout_centerVertical="true"
            android:text="cancel" />

    </LinearLayout>

</RelativeLayout>