<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OpenImageActivity">

    <ImageView
        android:id="@+id/image_open_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/image_tools_open_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <Button
            android:id="@+id/button_rotate_left_90"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="0dp"
            android:background="@drawable/ic_rotate_left_black_24dp"
            android:gravity="center" />

        <Button
            android:id="@+id/button_rotate_right_90"
            android:layout_alignParentEnd="true"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_rotate_right_black_24dp" />


        <Button
            android:id="@+id/btn_save_openimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="33dp"
            android:textColor="#fff"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/arbutusslabregular"
            android:layout_toEndOf="@+id/button_rotate_left_90"
            android:layout_centerVertical="true"
            android:background="@color/colorPGreen"
            android:text="save" />

        <Button
            android:id="@+id/btn_discard_openimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
android:textColor="#fff"
android:fontFamily="@font/arbutusslabregular"
            android:padding="5dp"
            android:layout_marginEnd="33dp"
            android:layout_toStartOf="@+id/button_rotate_right_90"
            android:background="@color/colorPRed"
            android:layout_centerVertical="true"
            android:text="discard" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>