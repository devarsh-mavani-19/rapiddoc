<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".SetPasswordActivity">

    <TextView
        android:id="@+id/text_view_set_password"
        android:layout_above="@+id/password_set_password"
        android:padding="20dp"
        android:textColor="@color/colorAccent"
        android:text="Set Pin"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/arbutusslabregular"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/password_set_password"
        android:inputType="numberPassword"
        android:textColor="@color/colorAccent"
        android:backgroundTint="@color/colorAccent"
        android:padding="20dp"
        android:layout_margin="20dp"
        android:hint="Enter Pin"
        android:textColorHint="@color/colorAccent"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/password_retype_set_password"
        android:inputType="numberPassword"
        android:layout_below="@+id/password_set_password"
        android:textColor="@color/colorAccent"
        android:backgroundTint="@color/colorAccent"
        android:padding="20dp"
        android:layout_margin="20dp"
        android:hint="Re-Enter Pin"
        android:textColorHint="@color/colorAccent"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/button_password_next_set_password"
        android:layout_below="@+id/password_retype_set_password"
        android:padding="20dp"
        android:layout_margin="20dp"
        android:text="Next"
        android:layout_centerHorizontal="true"
        android:background="@color/colorAccent"
        android:textColor="@color/colorPrimary"
        android:layout_width="150dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/change_password_set_password"
        android:textColor="@color/colorPrimary"
        android:text="Change Password"
        android:visibility="invisible"
        android:layout_centerInParent="true"
        android:padding="20dp"
        android:layout_margin="20dp"
        android:background="@color/colorAccent"
        android:layout_width="150dp"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/remove_password_set_password"
        android:textColor="@color/colorPrimary"
        android:text="Remove Password"
        android:visibility="invisible"
        android:layout_below="@+id/change_password_set_password"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:layout_margin="20dp"
        android:background="@color/colorAccent"
        android:layout_width="150dp"
        android:layout_height="wrap_content"/>


</RelativeLayout>