    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/fixed_range_split"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ex: Split at every 2 pages"
        android:layout_margin="20dp"
        android:inputType="number"
        android:fontFamily="@font/arbutusslabregular"
        android:textSize="12sp"
        android:textColorHint="@color/colorPrimary"

        app:layout_constraintTop_toBottomOf="@+id/ad_banner_split_by_range"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <LinearLayout
        android:id="@+id/ll_buttons_split_fixed"
        app:layout_constraintTop_toBottomOf="@+id/fixed_range_split"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button
        android:id="@+id/button_fixed_range_done"
        android:text="Split"
        android:fontFamily="@font/arbutusslabregular"
        android:textStyle="bold"

        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="10sp"
        android:layout_margin="20dp"
        android:textColor="@color/colorPrimary"
        />
        <Button
            android:id="@+id/button_fixed_range_select_pdf"
            android:text="Select PDF"
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:fontFamily="@font/arbutusslabregular"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="10sp"
            android:layout_margin="20dp"
            android:textColor="@color/colorPrimary"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/pdf_select_message_split_fixed"
        app:layout_constraintTop_toBottomOf="@+id/ll_buttons_split_fixed"
        android:padding="20dp"
        android:layout_margin="20dp"
        android:textSize="12sp"
        android:textColor="@color/colorGray"
        android:textStyle="bold"
        android:fontFamily="@font/arbutusslabregular"
        android:text="No PDF Selected"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>