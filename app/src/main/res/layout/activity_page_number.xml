<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PageNumberActivity">

    <TextView
        android:id="@+id/text_view_page_number"
        android:padding="20dp"
        android:textColor="@color/colorPrimary"
        android:text="Select A PDF"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.github.barteksc.pdfviewer.PDFView
        android:id="@+id/pdf_preview_page_number"
        android:layout_centerInParent="true"
        android:background="@drawable/nopdfselected"
        android:layout_width="match_parent"
        android:layout_height="400dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/colorPrimary"
        android:src="@drawable/ic_done_black_24dp"
        android:layout_above="@+id/fab_settings"
        android:layout_alignParentEnd="true"
        android:id="@+id/page_number_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/colorPrimary"
        android:src="@drawable/ic_add_black_24dp"
        android:layout_above="@+id/page_number_done"
        android:layout_alignParentEnd="true"
        android:id="@+id/page_number_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/colorPrimary"
        android:src="@drawable/ic_settings_black_24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/fab_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>