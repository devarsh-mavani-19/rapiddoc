<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:layout_height="50dp">

    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:textStyle="bold"
        android:text="Page Number Settings"
        android:textColor="#fff"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:layout_height="wrap_content" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <Spinner
        android:id="@+id/spinner_PageMode"
        android:padding="25dp"
        android:layout_margin="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edit_text_starting_page"
        android:hint="Starting Page Number"
        android:padding="25dp"

        android:inputType="number"
        android:layout_margin="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edit_text_from"
        android:hint="From Page Number"
        android:padding="25dp"
        android:layout_margin="25dp"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edit_text_to"
        android:hint="To Page Number"
        android:inputType="number"
        android:padding="25dp"
        android:layout_margin="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_text_font_size"
                android:hint="Text Size"
                android:inputType="numberDecimal"
                android:padding="25dp"
                android:layout_margin="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Text Color"
                android:textAlignment="center"
                android:padding="20dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/color_picker_indicator"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:background="#000"
                android:layout_width="50dp"
                android:layout_height="50dp" />

        <Button
            android:id="@+id/btn_save_settings"
            android:text="Save Settings"
            android:background="@color/colorPrimary"
            android:textColor="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>